@model BookModel;

@{
  ViewData["Title"] = "Add New Book";
}

<div class="container">
  <h3 class="display-4">Add new book</h3>
  <hr />
  @if (ViewBag.IsSuccess == true)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>Congratulations!</strong> You have added a new book successfully. <br />
      <a asp-controller="book" asp-action="getbook" asp-route-id="@ViewBag.bookId">View details</a>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  }
  <form method="post" asp-action="addnewbook" asp-controller="book">
    <div class="form-group">
      <label asp-for="Language"></label>
      <select asp-for="Language" class="form-control">
        <option value="">Please choose book language</option>
        <option>Bahasa Indonesia</option>
        <option>English</option>
        <option>한국어</option>
        <option>日本語</option>
      </select>
      <span class="text-danger" asp-validation-for="Language"></span>
    </div>

    <div class="form-group">
      <label asp-for="Title"></label>
      <input asp-for="Title" class="form-control">
      <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
      <label asp-for="Author"></label>
      <input asp-for="Author" class="form-control">
      <span class="text-danger" asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
      <label asp-for="Description"></label>
      <textarea asp-for="Description" class="form-control"></textarea>
      <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
      <label asp-for="TotalPages"></label>
      <input asp-for="TotalPages" class="form-control">
      <span class="text-danger" asp-validation-for="TotalPages"></span>
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
      <input type="submit" value="Add Book" class="btn btn-primary" />
    </div>
  </form>
</div>
