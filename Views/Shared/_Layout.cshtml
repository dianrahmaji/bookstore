<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="~/css/Site.css">
  <title>Bookstore</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container">
        <a href="/" class="navbar-brand">
          <img src="~/images/logo.png" alt="C# Logo" width="30" height="auto">
          Bookstore
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-infinite-flex flex-sm-row-reverse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="btn btn-outline-primary">Login</a>
              <a class="btn btn-primary">Register</a>
            </li>
          </ul>
          <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
              <a href="/" class="nav-link text-dark">Home</a>
            </li>
            <li class="nav-item">
              <a href="/home/aboutus" class="nav-link text-dark">About</a>
            </li>
            <li class="nav-item">
              <a href="/home/contactus" class="nav-link text-dark">Contact</a>
            </li>
            <li class="nav-item">
              <a href="/book/getallbooks" class="nav-link text-dark">All Books</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <main role="main">
    @RenderBody()
  </main>
  <footer class="border-top footer text-muted text-center">
    <div class="container">
      Copyright &copy; Book Store @DateTime.Now.Year
    </div>
  </footer>
</body>

</html>
